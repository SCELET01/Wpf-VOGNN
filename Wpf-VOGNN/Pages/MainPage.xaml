<Page x:Class="Wpf_VOGNN.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_VOGNN.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Border Background="#66FFFFFF" CornerRadius="20"/>
        <Button Content="Посмотреть полный список" HorizontalAlignment="Left" Height="40" Margin="28,28,0,0" VerticalAlignment="Top" Width="350" Click="Button_Click"/>
        <Button Content="Создать учетную карточку" HorizontalAlignment="Left" Height="40" Margin="28,73,0,0" VerticalAlignment="Top" Width="350" Click="ButAddUC_Click"/>
        <Calendar HorizontalAlignment="Right" Margin="0,70,75,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Calendar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Calendar.RenderTransform>
        </Calendar>


    </Grid>

</Page>
